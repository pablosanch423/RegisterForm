<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Registration and List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-200 min-h-screen flex items-center justify-center">
    <div class="max-w-md w-full mx-auto bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-2xl font-semibold mb-4">Registration Form</h2>
      <form action="/register" method="POST">
        <div class="mb-4">
          <label for="name" class="block text-gray-600">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="w-full p-2 border rounded-md focus:outline-none focus:border-blue-500"
            required
          />
        </div>
        <div class="mb-4">
          <label for="email" class="block text-gray-600">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="w-full p-2 border rounded-md focus:outline-none focus:border-blue-500"
            required
          />
        </div>
        <div class="mb-4">
          <label for="phone" class="block text-gray-600">Phone Number</label>
          <input
            type="text"
            id="phone"
            name="phone"
            class="w-full p-2 border rounded-md focus:outline-none focus:border-blue-500"
          />
        </div>
        <div class="mb-4">
          <label for="address" class="block text-gray-600">Address</label>
          <textarea
            id="address"
            name="address"
            rows="2"
            class="w-full p-2 border rounded-md focus:outline-none focus:border-blue-500 resize-none"
          ></textarea>
        </div>
        <div class="mb-6">
          <label for="password" class="block text-gray-600">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="w-full p-2 border rounded-md focus:outline-none focus:border-blue-500"
            required
          />
        </div>
        <div class="flex items-center">
          <button
            type="submit"
            class="bg-blue-500 text-white font-semibold py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:bg-blue-600"
          >
            Register
          </button>
        </div>
      </form>
    </div>

    <div class="max-w-md w-full mx-auto bg-white p-6 rounded-lg shadow-md mt-4">
      <h2 class="text-2xl font-semibold mb-4">User List</h2>
      <div>
        <% users.forEach(user => { %>
        <div
          class="bg-white rounded-lg shadow-md p-4 mb-4 flex justify-between items-center"
        >
          <div>
            <h2 class="text-lg font-semibold mb-2">Name: <%= user.name %></h2>
            <p class="text-gray-600">Email: <%= user.email %></p>
            <p class="text-gray-600">Phone: <%= user.phone %></p>
            <p class="text-gray-600">Address: <%= user.address %></p>
          </div>
          <div class="flex space-x-2">
            <a
              class="bg-blue-500 text-white font-semibold py-1 px-2 rounded hover:bg-blue-600 focus:outline-none focus:bg-blue-600"
              href="/edit/<%= user._id %>"
              >Edit</a
            >
            <form action="/delete/<%= user._id %>" method="POST" class="inline">
              <button
                type="submit"
                class="bg-red-500 text-white font-semibold py-1 px-2 rounded hover:bg-red-600 focus:outline-none focus:bg-red-600"
              >
                Delete
              </button>
            </form>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
